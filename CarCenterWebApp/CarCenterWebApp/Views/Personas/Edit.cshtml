@model CarCenterWebApp.Models.DTOs.PersonasDTO
@{
    ViewBag.Title = "Editar Personas";
}

<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm("Edit", "Personas", FormMethod.Post, new { role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationMessage("error", new { @class = "text-danger" })

            @Html.LabelFor(p => p)
            @Html.TextBoxFor(p => p.Identificacion, new { @class = "form-control", @readonly = "readonly" })

            @Html.LabelFor(p => p)
            @Html.TextBoxFor(p => p.Nombres, new { @class = "form-control" })

            @Html.LabelFor(p => p)
            @Html.TextBoxFor(p => p.Telefono, new { @class = "form-control" })

            @Html.LabelFor(p => p)
            @Html.TextBoxFor(p => p.Direccion, new { @class = "form-control" })

            @Html.LabelFor(p => p)
            @Html.TextBoxFor(p => p.Correo, new { @class = "form-control" })

            @Html.LabelFor(p => p)
            @Html.TextBoxFor(p => p.Especialidad, new { @class = "form-control" })

            @Html.LabelFor(p => p)
            @Html.TextBoxFor(p => p.TipoPersona, new { @class = "form-control" })

            @Html.LabelFor(p => p)
            @Html.TextBoxFor(p => p.Contrasena, new { @class = "form-control" })

            @Html.LabelFor(p => p)
            @Html.TextBoxFor(p => p.EstadoPersona, new { @class = "form-control" })

            <div style="text-align: right">
                <input type="submit" class="btn btn-success" value="Guardar" />
            </div>
        }
    </div>
</div>

